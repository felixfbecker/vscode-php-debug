{
  "version": "2.0.0",
  "command": "npm",
  "args": ["run", "--silent"],
  "options": {
    "env": {
      "VSCODE_DEBUG_PORT": "4711"
    }
  },
  "type": "shell",
  "presentation": {
    "echo": true,
    "reveal": "silent",
    "focus": false,
    "panel": "shared",
    "showReuseMessage": true,
    "clear": false
  },
  "tasks": [
    {
      "label": "compile",
      "group": "build",
      "problemMatcher": "$tsc"
    },
    {
      "label": "watch",
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "test",
      "group": "test",
    }
  ]
}
