{
  "version": "0.2.0",
  // "debugServer": 4711, // Uncomment for debugging the adapter
  "configurations": [
    {
      "name": "Listen for XDebug",
      "type": "php",
      "request": "launch",
      "port": 9000,
      "log": true,

      // for single root
      // "localSourceRoot": "${workspaceRoot}",
      // "serverSourceRoot": "/var/www/html",

      // for individual path mappings
      "pathMappings": {
        "/var/www/html/main": "${workspaceRoot}/main",
        "/var/www/html/secondary": "${workspaceRoot}/secondary"
      }
    },
    {
      "name": "Launch",
      "request": "launch",
      "type": "php",
      "program": "${file}",
      "cwd": "${workspaceRoot}",
      "externalConsole": false,

      // for single root
      // "localSourceRoot": "${workspaceRoot}",
      // "serverSourceRoot": "/var/www/html",

      // for individual path mappings
      "pathMappings": {
        "/var/www/html/main": "${workspaceRoot}/main",
        "/var/www/html/secondary": "${workspaceRoot}/secondary"
      }
    }
  ]
}